<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_ijo"
    tools:context=".ui.beranda.login.peminjam.home.riwayat.detailriwayat.DetailHistoryActivity">

    <TextView
        android:id="@+id/tv_detail_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:text="Detail Pinjaman"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cl_container"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_riwayat"
        android:layout_marginTop="15dp"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/cl_container"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_riwayat"
        android:layout_marginTop="15dp"
        android:text="Selesai"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/tv_with_whiteborder"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_status"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:background="@drawable/rounded_corners"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_label_pinjaman_ke"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Pinjaman Ke-"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"/>

                <TextView
                    android:id="@+id/tv_pinjaman_ke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="1"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/batas_1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_pinjaman_ke"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_pinjaman_ke" />

                <TextView
                    android:id="@+id/tv_label_jumlah_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Jumlah Pinjaman"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pinjaman_ke" />

                <TextView
                    android:id="@+id/tv_jumlah_pinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="Rp. 500.000"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pinjaman_ke" />

                <View
                    android:id="@+id/batas_2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/tv_jumlah_pinjaman" />

                <TextView
                    android:id="@+id/tv_label_tenor_pinjaman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Tenor Pinjaman"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jumlah_pinjaman" />

                <TextView
                    android:id="@+id/tv_tenor_pinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="6 Bulan"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jumlah_pinjaman"/>
                <View
                    android:id="@+id/batas_3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/tv_tenor_pinjaman" />

                <TextView
                    android:id="@+id/tv_label_pemasukan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Pemasukan Perbulan"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tenor_pinjaman" />

                <TextView
                    android:id="@+id/tv_pemasukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="Rp. 2.000.000"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tenor_pinjaman" />

                <TextView
                    android:id="@+id/tv_label_tanggungan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Jumlah Tanggungan"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_pemasukan" />

                <TextView
                    android:id="@+id/tv_tanggungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="3"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pemasukan" />

                <View
                    android:id="@+id/batas_5"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/tv_pemasukan" />

                <TextView
                    android:id="@+id/tv_label_deskripsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Deskripsi"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tanggungan" />

                <TextView
                    android:id="@+id/tv_deskripsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/desc_menu_1"
                    android:textColor="@color/orange"
                    android:textSize="12sp"
                    android:minLines="2"
                    android:maxLines="4"
                    app:layout_constraintStart_toStartOf="@id/tv_label_pinjaman_ke"
                    app:layout_constraintEnd_toEndOf="@id/tv_pinjaman_ke"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_deskripsi" />

                <View
                    android:id="@+id/batas_6"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_tanggungan" />


                <View
                    android:id="@+id/batas_7"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/tv_deskripsi" />

                <TextView
                    android:id="@+id/tv_label_riwayat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Riwayat Pembayaran"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_riwayat_pembayaran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/tv_label_pinjaman_ke"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_riwayat"
                    tools:listitem="@layout/rv_item_riwayat_pembayaran"
                    />

                <ProgressBar
                    android:id="@+id/progressBar_history_pembayaran"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/rv_riwayat_pembayaran"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rv_riwayat_pembayaran" />

                <View
                    android:id="@+id/batas_8"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/orange"
                    app:layout_constraintEnd_toEndOf="@+id/tv_pinjaman_ke"
                    app:layout_constraintStart_toStartOf="@id/tv_label_jumlah_pinjaman"
                    app:layout_constraintTop_toBottomOf="@id/rv_riwayat_pembayaran" />

                <TextView
                    android:id="@+id/tv_label_status_pembayaran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Status Pembayaran"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:singleLine="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline_1"
                    app:layout_constraintTop_toBottomOf="@+id/rv_riwayat_pembayaran" />

                <TextView
                    android:id="@+id/tv_status_pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="Selesai"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_riwayat_pembayaran" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_tutup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_status_pembayaran"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:text="Tutup"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.5"
                    android:orientation="vertical"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>